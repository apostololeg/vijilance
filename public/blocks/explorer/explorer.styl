.explorer
    display inline-block
    padding 5px
    box-sizing border-box
    height 100%
    max-height: 100%;
    width 200px
    overflow-y scroll

    &__item
        padding 5px
        box-sizing border-box
        line-height 2em
        background rgba(255,255,255,.1);

    &__item + &__item
        margin-top 3px;

    &__empty
        padding 50px 0
        text-align center
        color: #ddd;
